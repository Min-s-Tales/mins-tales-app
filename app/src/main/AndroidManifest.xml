<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.minstalesapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mins_tales_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mins_tales_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MinsTalesApp"
        android:screenOrientation="portrait"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SplashScreen.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.MinsTalesApp"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainPage.MainActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".game.GameActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Profile.ProfileActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Profile.LoginActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Profile.SignupActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".Profile.ConnexionActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".MainPage.DetailStoryActivity"
            android:screenOrientation="nosensor"/>
    </application>

</manifest>