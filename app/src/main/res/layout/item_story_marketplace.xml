<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="5dp">

    <ImageView
        android:id="@+id/marketStoryIcon"
        android:layout_width="130dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/simple_round_border"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/marketStoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/marketStoryIcon"
        app:layout_constraintEnd_toEndOf="@id/marketStoryIcon"
        app:layout_constraintBottom_toBottomOf="@id/marketStoryIcon"
        android:layout_marginBottom="10dp"
        android:text="Story title can also be on multiple lines"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="bottom"
        android:maxEms="6"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>